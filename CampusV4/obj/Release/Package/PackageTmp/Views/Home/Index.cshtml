@model CampusV4.Models.HomeViewModel

<div id="Index">
    <div style="transform-origin: left top;">
        <div class="page-title">
            <div class="title_left">
                <ol class="breadcrumb">
                    <li class="active">案件一覧</li>
                </ol>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @(Html.C1().FlexGrid()
                                .AutoGenerateColumns(false).IsReadOnly(true).Height("308px").Id("gridIndex")
                                .Bind(Model.ManagerIndexDataList)
                                .Columns(b1 =>
                                {
                                    b1.Add(cb => cb.Binding("Col_1").Width("50").Header("見積").Align("center"));
                                    b1.Add(cb => cb.Binding("Col_2").Width("120").Header("引合番号").Align("center"));
                                    b1.Add(cb => cb.Binding("Col_3").Width("80").Header("進捗状況"));
                                    b1.Add(cb => cb.Binding("Col_4").Width("50").Header("内").Align("center"));
                                    b1.Add(cb => cb.Binding("Col_5").Width("120").Header("依頼日").Align("center"));
                                    b1.Add(cb => cb.Binding("Col_6").Width("200").Header("お客様名").Align("center"));
                                    b1.Add(cb => cb.Binding("Col_7").Width("200").Header("品名"));
                                    b1.Add(cb => cb.Binding("Col_8").Width("150").Header("営業担当者"));
                                }))
                        </div>

                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-7 col-md-offset-3" style="text-align: right">
                                <a href="#" class="btn btn-primary" id="btnDialog">ダイアログ</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

    </script>
}