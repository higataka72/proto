@model CampusV4.Models.EstimateReplyInputViewModel

<div id="dlgSupplierSearchAdd">
    <form id="frmSupplierSearchAdd" class="form-horizontal">
        <h4 class="modal-header">
            担当者選択(登録)画面
            <button type="button" tabindex="-1" class="close wj-hide">&times;</button>
        </h4>
        <div class="modal-body">
            <div class="form-group">
                @(Html.C1().FlexGrid()
                    .AutoGenerateColumns(false)
                    .Height("350px").Width("840px")
                    .Id("grdSupplierSearchAdd")
                    .AllowAddNew(true).AllowDelete(true)
                    .Bind(Model.SupplierSearchAddDataList)
                    .Columns(b1 =>
                    {
                        b1.Add(cb => cb.Binding("Col_1").Width("100").Header("コード").Align("center"));
                        b1.Add(cb => cb.Binding("Col_2").Width("180").Header("名称"));
                        b1.Add(cb => cb.Binding("Col_3").Width("150").Header("部署名"));
                        b1.Add(cb => cb.Binding("Col_4").Width("150").Header("連絡先"));
                        b1.Add(cb => cb.Binding("Col_5").Width("200").Header("E-Mail"));
                    }))
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary wj-hide-ok">選択</button>
            <button type="button" class="btn btn-default wj-hide">登録</button>
        </div>
    </form>
</div>

@Html.C1().Popup("#dlgSupplierSearchAdd")