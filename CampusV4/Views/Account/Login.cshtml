@using CampusV4.Models
@model LoginViewModel

@{
    ViewBag.Title = "ログイン";
}

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>CAMPUSにログインして下さい。</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="col-md-3 control-label" for="UserId">ユーザーID</label>
                    <div class="col-md-9">
                        <input class="form-control" id="UserId" name="UserId" type="text" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="Password">パスワード</label>
                    <div class="col-md-9">
                        <input class="form-control" id="Password" name="Password" type="password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input id="ShowPassword" name="ShowPassword" type="checkbox" value="true" />
                            <input name="ShowwPassword" type="hidden" value="false" />
                            <label for="ShowPassword">パスワードを表示する</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input id="AutoLogin" name="AutoLogin" type="checkbox" value="true" />
                            <input name="AutoLogin" type="hidden" value="false" />
                            <label for="AutoLogin">ブラウザを閉じる時、オートログインを有効にする</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-2">
                        <input type="submit" value="ログイン" class="btn btn-default" />
                    </div>
                    <div class="col-md-offset-2 col-md-2">
                        <a href="#" class="btn btn-default">キャンセル</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input id="Protection" name="Protection" type="checkbox" value="true" />
                            <input name="Protection" type="hidden" value="false" />
                            <label for="Protection">個人情報保護方針に同意してログイン</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-10">
                    <p>
                        ユーザーID・パスワードを忘れた方は @Html.ActionLink("こちら", "ForgotPassword")
                    </p>
                    <p>
                        言語は<a href="#">日本語</a>です。異なる場合は<a href="#">こちら</a>をクリック
                    </p>
                    <p>
                        概算見積を希望の方は<a href="#">こちら</a>
                    </p>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}