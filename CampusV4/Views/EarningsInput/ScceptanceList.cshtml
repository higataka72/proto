@model CampusV4.Models.EarningsInputViewModel

<div>
    <div class="page-title">
        <div class="title_left">
            <h3>検収明細</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                @using (Html.BeginForm("ScceptanceList", "EarningsInput", FormMethod.Post, new { @class = "form-horizontal", role = "form", defaultbutton = "dummySubmit" }))
                {
                    @Html.HiddenFor(model => model.Mode)
                    <div class="form-group">
                        @(Html.C1().FlexGrid()
                            .AutoGenerateColumns(false).IsReadOnly(true).Height("450px").Id("flexgrid").AllowAddNew(false)
                            .Bind(Model.GridScceptanceDataList)
                            .Columns(b1 =>
                            {
                                b1.Add(cb => cb.Binding("Count").Width("50").Header("回").WordWrap(true).DataType(DataType.Number));
                                b1.Add(cb => cb.Binding("PurchaseOrderNo").Width("200").Header("注文書番号").WordWrap(true));
                                b1.Add(cb => cb.Binding("Quantity").Width("150").Header("数量").WordWrap(true).DataType(DataType.Number));
                                b1.Add(cb => cb.Binding("Unitprice").Width("200").Header("単価").WordWrap(true).DataType(DataType.Number));
                                b1.Add(cb => cb.Binding("Price").Width("200").Header("金額").WordWrap(true).DataType(DataType.Number));
                                b1.Add(cb => cb.Binding("ShipDate").Width("150").Header("出荷日").WordWrap(true).DataType(DataType.Date));
                                b1.Add(cb => cb.Binding("AcceptanceDate").Width("150").Header("検収日").WordWrap(true).DataType(DataType.Date));
                                b1.Add(cb => cb.Binding("CancelDate").Width("150").Header("キャンセル日").WordWrap(true).DataType(DataType.Date));
                            }))
                    </div>


                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-12" style="text-align: right">
                            <input type="submit" id="dummySubmit" value="Dummy" class="btn btn-primary" name="submitBtn" style="display:none;" onclick="return false;" />
                            <button type="submit" class="btn btn-primary" id="btnProductionNumber" formaction="/EarningsInput/ProductionNumberList">登録</button>
                            @{
                                var mode = Model.Mode;
                            }
                            @if (mode == "1")
                            {
                                <a href="/EarningsInput/EarningsInput?mode=1" class="btn btn-primary" id="btnback">戻る</a>
                            }
                            else if (mode == "2")
                            {
                                <a href="/EarningsInput/EarningsInput?mode=2" class="btn btn-primary" id="btnback">戻る</a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        
    </script>
}